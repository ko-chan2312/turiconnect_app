<h2>投稿一覧</h2>

<ol class="posts">
    <% @post.each do |post|%>
    <li id="post-<%= post.id %>">
        <span class="user"><%= link_to post.user.name, post.user %></span>
        <span class="fish"><%= post.fish%></span>
        <span class="place"><%= post.place%></span>
        <span class="content"><%= post.content%></span>
        <%= link_to '詳細をみる',  post_path(post) %>
        <% end %>
    </li>
</ol>