<h1>投稿詳細ページ</h1>
<h3><%= @post.fish%></h3>
<h3><%= @post.place%></h3>
<h3><%= @post.content%></h3>

<h2>コメント一覧</h2>
<% @post.comments.each do |c| %>
<div>
    <%= c.content %>
</div>
<% end %>

<%= form_for [@post, @comment] do |f| %>
<%= f.text_field :content %>
<br>
<%= f.submit 'コメントする' %>
<% end %>

<%= link_to "投稿一覧に戻る", posts_path %>