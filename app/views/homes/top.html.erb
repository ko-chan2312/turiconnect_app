<% if signed_in? %>
<div class="row">
    <section class="stats">
        <%= render 'shared/stats' %>
    </section>
    <section class="post_form">
        <%= render 'shared/post_form' %>
        <%= render 'shared/posts_search_form' %>
    </section>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">
                <h3>自分の投稿</h3>
            </div>
        </div>
        <%= render 'shared/feed' %>
    </div>
</div>
<% else %>
