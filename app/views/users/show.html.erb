<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%= @user.name %></h1>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
            <% if @user.id == current_user.id %>

            <% else %>
            <% if @isRoom == true %>
            <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
                <% else %>
                <%= form_for @room do |f| %>
                <%= fields_for @entry do |e| %>
                <%= e.hidden_field :user_id, :value=> @user.id %>
                <% end %>
                <%= f.submit "チャットを始める" %>
                <% end %>
                <% end %>
                <% end %>
        </section>

    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if signed_in? %>
        <% if @user.posts.any? %>
        <h3>投稿 (<%= @user.posts.count %>)</h3>
        <ol class="posts">
            <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
        <% end %>
    </div>
</div>