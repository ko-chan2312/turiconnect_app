<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%= @user.name %></h1>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @user.likes.any? %>
        <ol class="posts">
            <%= render @posts %>
        </ol>
        <%= paginate @posts ,theme: 'twitter-bootstrap-4'%>
        <% end %>
    </div>
</div>