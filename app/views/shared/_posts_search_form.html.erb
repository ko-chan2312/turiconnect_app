<%= search_form_for @q, url: @url do |f| %>
  <%= f.label :fish_or_content_cont, '投稿内容検索' %>
  <div class="input-group">
    <%= f.text_field :fish_or_content_cont, placeholder: "投稿内容を入れてください",
                      class: 'form-control' %>
    <span class="input-group-btn">
     <%= f.submit '検索', class: "btn btn-primary" %>
    </span>
  </div>
<% end %>